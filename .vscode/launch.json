    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Bot",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "internalConsole",
            "cwd": "${workspaceFolder}/src"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "TypeScript Bot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/ts/js/index.js",
            "preLaunchTask": "tsc: build - ts/tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}